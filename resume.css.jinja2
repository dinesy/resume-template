@media screen {
@font-face { font-family: "Calibri"; font-display: swap; src: url("/font/Calibri.otf"), format('otf'); font-weight: normal; font-style: normal;}
@font-face { font-family: "Calibri"; font-display: swap; src: url("/font/Calibri-Bold.otf"), format('otf');  font-weight: bold; font-style: normal;}
@font-face { font-family: "Calibri"; font-display: swap; src: url("/font/Calibri-Italic.otf"), format('otf');  font-weight: normal; font-style: italic;}
@font-face { font-family: "Calibri"; font-display: swap; src: url("/font/Calibri-BoldItalic.otf"), format('otf');  font-weight: bold; font-style: italic;}
}

:root {
    --title-letter-spacing: 0.1ch;
}

body {
    font-family: Calibri, sans-serif;
}

.resume {
    margin: 0pt 18pt;
    font-size: 9.5pt;
    font-family: Calibri, sans-serif;
}

div.name {
    font-size: 18pt;
    font-weight: bold;
    text-align: center;
}

div.contact-info {
    text-align: center;
    font-size: 8pt;
}

div.tagline {
    text-align: center;
    font-size:  15pt;
    font-weight: bold;
    margin-top: 8pt;
    letter-spacing: var(--title-letter-spacing);
}

div.summary {
    text-align: justify;
    line-height: 1.3;
}

div.section {
    margin-top: 9pt;
}

div.section:first-of-type {
    margin-top: initial;
}

div.section-title {
    text-align: center;
    font-size: 13pt;
    font-weight: bold;
    text-transform: uppercase;

    line-height: 1.2;
    letter-spacing: var(--title-letter-spacing);
}

div.skills {
}

.skills-group {
    line-height: 1.2;
    vertical-align: top;
}

.skills-group .group-name {
    font-weight: bold;
    text-transform: uppercase;
    padding-right: 15px;
}

.skills-group .skills-list {
}

.skills-group .skills-list .skill-item {
    white-space: pre;
}

div.employer-id {
    font-size: 12pt;
    letter-spacing: var(--title-letter-spacing);
    text-transform: uppercase;
}

div.employer-id .employer-name {
    font-weight: bold;
}

div.employer-id .employer-location {
    float: right;
}

div.employer-id .employer-date {
    float: right;
    padding-left: 0.25em;
    letter-spacing: var(--title-letter-spacing);
}

.experience-employer {
    margin-bottom: 14pt;
}

div.experience-employer .experience-position {
    margin-top: 8pt;
}

div.experience-employer .experience-position:first-of-type {
    margin-top: 1pt;
}

div.experience-employer .experience-positions {
    margin-left: 14pt;
}

div.position-id {
    font-size: 11pt;
    text-transform: uppercase;
    letter-spacing: var(--title-letter-spacing);
}

div.position-id .position-title {
    font-weight: bold;
}

div.position-id .position-date {
}

.experience-position .position-details {
}

div.position-details .details-group {
    margin-top: 1pt;
    margin-bottom: 4pt;
}
div.position-details .details-group .group-name {
    font-size: 11pt;
    letter-spacing: var(--title-letter-spacing);
    text-transform: uppercase;
}

div.position-details .details-group ul {
    margin-top: initial;
    margin-bottom: initial;

    /* list-style-type: disc; */
}

div.position-details .details-group ul li {
    margin-top: 3pt;
    margin-bottom: 1pt;
    position: relative;
    list-style: none;
    line-height: 1.1;
}

div.position-details .details-group ul li::before {
    content: "â€¢";
    position: absolute;
    left: -7pt;
    top: 0.1%;
}

div.education-item {
    text-align: center;
    font-size: 11pt;
    text-transform: uppercase;
}

@media print {
    .resume {
        margin: 0;
    }
    {% if not url_query.dont_avoid_breaks -%}
    div.employer-id, div.position-id {
        break-after: avoid-page;
    }

    div.details-group, div.experience-position {
        /* color: blue; */
        break-inside: avoid-page;
    }
    {%- endif %}
}
